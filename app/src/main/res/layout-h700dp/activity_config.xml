<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:ignore="MissingDefaultResource">

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/navigation_header"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawermenu"
        android:fitsSystemWindows="true">
    </android.support.design.widget.NavigationView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        app:theme ="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>



    <EditText
        android:id="@+id/tipodebancada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"

        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/textView2"
        android:inputType="textNoSuggestions"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/textView2"
        android:importantForAutofill="no"
        tools:targetApi="o"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/cultura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginRight="20dp"
        android:inputType="textNoSuggestions"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/textView3"
        android:importantForAutofill="no"
        tools:targetApi="o"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/datadecultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:id="@+id/concentração"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginRight="20dp"
        android:inputType="numberDecimal"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/textView5"
        android:importantForAutofill="no"
        tools:targetApi="o"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/ciclosnoturnos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView12"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_marginTop="-5dp"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/textView12"
        android:importantForAutofill="no"
        tools:targetApi="o"
        tools:ignore="LabelFor" />
    <EditText
        android:id="@+id/bancada"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content"
        android:text="@string/BancadaConfigActivity"
        android:layout_centerInParent="true"
        android:inputType="textNoSuggestions"
        android:layout_marginTop="20dp"
        android:hint="@string/BancadaConfigActivity"
        android:textSize="20sp"
        android:importantForAutofill="no"
        tools:targetApi="o" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="@string/in_cio_do_dia"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/iniciododiaview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignBaseline="@+id/textView7"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/fimdodiaview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="260dp"
        android:layout_toRightOf="@+id/textView8"
        android:layout_alignBaseline="@+id/textView8"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/textView8" />
    <TextView
        android:id="@+id/tempoligadoview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/textView9"
        android:layout_alignBaseline="@+id/textView9"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/tempodesligadoview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="340dp"
        android:layout_toRightOf="@+id/textView10"
        android:layout_alignBaseline="@+id/textView10"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/textView10" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bancada"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/tipo_de_bancada"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/cultura"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="@string/data_de_cultivo"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="@string/concentra_o"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        android:hint = "@string/number_2"
        android:text="@string/configura_o_do_temporizador"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fim_do_dia"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tempo_ligado"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tempo_desligado"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/ciclos_noturnos"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/qr_code"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/qrcodetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/textView13"
            android:layout_alignBaseline="@+id/textView13"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/textView13" />
        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignRight="@+id/time_off"
            android:layout_below="@+id/time_off"
            android:background="@null"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/ic_action_camera"
            android:contentDescription="@string/tempodesligado_logo" />








    <Button
        android:id="@+id/atualizar"
        android:layout_width="220dp"
        android:background="@drawable/button_shape"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        android:text="@string/atualizar"
        />
    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignBottom="@+id/textView4"


        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_icons8_calendar"
        android:layout_alignRight="@+id/day_begin"
        android:contentDescription="@string/datadecultivo_logo" />
    <ImageView
        android:id="@+id/day_begin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView6"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/day_end"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:layout_alignLeft="@+id/day_end"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/in_ciododia_logo" />
    <ImageView
        android:id="@+id/day_end"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_below="@+id/day_begin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/fimdodia_logo" />
    <ImageView
        android:id="@+id/time_on"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/textView9"
        android:layout_below="@+id/day_end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_iconfinder_hourglass_end_1608368"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/tempoligado_logo" />
    <ImageView
        android:id="@+id/time_off"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/textView10"
        android:layout_below="@+id/time_on"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_iconfinder_hourglass_end_1608368"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/tempodesligado_logo" />

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>

